<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level_and_name_descriptor"
        android:text="Subject and Level:"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:padding="7dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/display_upcoming_level_and_name"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/level_and_name_descriptor"
        android:text="name"
        android:textSize="15dp"
        android:padding="7dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_and_time_descriptor"
        android:layout_below="@+id/level_and_name_descriptor"
        android:text="Date and Time:"
        android:textSize="15dp"
        android:padding="7dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/display_upcoming_date_and_time"
        android:layout_below="@+id/level_and_name_descriptor"
        android:layout_toRightOf="@+id/date_and_time_descriptor"
        android:text="Date and Time"
        android:textSize="15dp"
        android:padding="7dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/black"
        android:layout_below="@+id/date_and_time_descriptor"
        android:id="@+id/upcoming_black1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Students in lesson"
        android:background="@color/caldroid_gray"
        android:textSize="20dp"
        android:padding="10dp"
        android:id="@+id/lv_header"
        android:layout_below="@+id/upcoming_black1"/>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/display_list_students"
        android:layout_below="@+id/lv_header">

    </ListView>
</RelativeLayout>